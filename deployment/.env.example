# Multi-Agent MCP System Environment Configuration
# Copy this to .env and customize for your server

# Database Configuration
DB_PASSWORD=your_secure_password_here
POSTGRES_DB=mcp_system
POSTGRES_USER=mcp_user

# OpenAI API Configuration (for AI features)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Qwen API Configuration (Alibaba Cloud)
# Get your API key from https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=sk-your-dashscope-api-key-here

# Monitoring Configuration
GRAFANA_PASSWORD=your_grafana_password_here

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=your_n8n_password_here
N8N_ENCRYPTION_KEY=your_encryption_key_here_32_chars

# Server Configuration
SERVER_IP=your.server.ip.here
DOMAIN_NAME=your-domain.com
SSL_EMAIL=your-email@domain.com

# Cloudflare Tunnel Configuration
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Security Configuration
SECRET_KEY=your_secret_key_here_change_me
API_KEY_REQUIRED=false
CORS_ORIGINS=https://your-domain.com,http://localhost:3000

# Performance Configuration
WORKERS=4
WORKER_CONNECTIONS=1000
MAX_CONTENT_LENGTH=104857600  # 100MB

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7

# Feature Flags
ENABLE_MONITORING=true
ENABLE_SSL=false  # Cloudflare handles SSL
ENABLE_BACKUPS=true
ENABLE_RATE_LIMITING=true
ENABLE_CLOUDFLARE_TUNNEL=true
ENABLE_N8N=true

